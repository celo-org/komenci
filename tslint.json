{
    "extends": ["@celo/typescript/tslint.json"],
    "linterOptions": {
      "include": ["**/*.ts"]
    },
    "rules": {
      "no-var-keyword": false,
      "curly": true,
      "no-console": false,
      "no-arg": false,
      "no-object-literal-type-assertion": false,
      "object-literal-shorthand": false,
      "no-duplicate-variable": false,
      "no-sparse-arrays": false,
      "interface-over-type-literal": false,
      "no-global-arrow-functions": false,
      "no-floating-promises": true,
      "semicolon":[true, "never"],
      "comment-format": [true, "check-space", "allow-trailing-lowercase"],
      "one-line": [true, "check-open-brace"],
      "whitespace": [true, "check-preblock"],
      "ordered-imports": true,
      "max-classes-per-file": false
    }
  }
  