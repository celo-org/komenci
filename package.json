{
  "name": "komenci-monorepo",
  "version": "1.0.0",
  "description": "The Komenci monorepo, collection of packages which make up the Komenci backend service and client libraries",
  "author": "Bogdan Dumitru <bogdan@clabs.co>",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "packages/apps/*",
    "packages/libs/*",
    "packages/*"
  ],
  "scripts": {
    "build:libs:dev": "yarn build:libs && ./scripts/libs.run.sh build:watch",
    "build:libs": "./scripts/libs.build.sh",
    "build:relayer": "yarn --cwd ./packages/apps/relayer build",
    "start:relayer:prod": "yarn --cwd ./packages/apps/relayer start:prod",
    "start:relayer:dev": "yarn --cwd ./packages/apps/relayer start:dev",
    "build:api": "yarn --cwd ./packages/apps/api build",
    "start:api:prod": "yarn --cwd ./packages/apps/api start:prod",
    "start:api:dev": "yarn --cwd ./packages/apps/api start:dev",
    "build:rewards": "yarn --cwd ./packages/apps/rewards build",
    "start:rewards:prod": "yarn --cwd ./packages/apps/rewards start:prod",
    "start:rewards:dev": "yarn --cwd ./packages/apps/rewards start:dev",
    "format": "prettier --write \"packages/**/*.ts\"",
    "lint": "tslint -c tslint.json --project tsconfig.json",
    "secrets:decrypt": "bash scripts/secrets.sh decrypt",
    "secrets:encrypt": "bash scripts/secrets.sh encrypt",
    "cli": "yarn --cwd ./packages/apps/cli start",
    "test": "yarn lerna run test",
    "test:cov": "yarn lerna run test:cov",
    "test:e2e": "yarn lerna run test:e2e"
  },
  "devDependencies": {
    "@celo/typescript": "^0.0.1",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-react": "^5.0.0",
    "ultra-runner": "^3.10.5"
  }
}
